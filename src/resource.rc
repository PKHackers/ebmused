	EDITTEXT IDC_TRANSPOSE_OFF,      50,  5, 42, 14
	DEFPUSHBUTTON "&Apply", IDOK,     5, 24, 42, 14
	PUSHBUTTON "&Cancel", IDCANCEL,  50, 24, 42, 14
END

